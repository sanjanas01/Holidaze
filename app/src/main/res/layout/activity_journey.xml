<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JourneyActivity">

    <!-- Background Image -->

    <!-- Title Text -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="410dp"
        android:layout_height="790dp"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="319dp"
        android:layout_marginBottom="40dp"
        android:text="LET'S BEGIN THE JOURNEY"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/whereToButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Where To? Button -->
    <Button
        android:id="@+id/whereToButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#87CEEB"
        android:padding="10dp"
        android:text="Where To?"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/startDateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <!-- Location EditText (Initially hidden) -->
    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        android:hint="Enter location"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/startDateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <!-- Start Date Button -->
    <Button
        android:id="@+id/startDateButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#87CEEB"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
        android:padding="10dp"
        android:text="Start Date"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/endDateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whereToButton" />

    <!-- End Date Button -->
    <Button
        android:id="@+id/endDateButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#87CEEB"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
        android:padding="10dp"
        android:text="End Date"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/startPlanningButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDateButton" />

    <!-- Start Planning Button -->
    <Button
        android:id="@+id/startPlanningButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:backgroundTint="#FFFFFF"
        android:padding="10dp"
        android:text="CREATE TRIP"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/endDateButton"
        app:layout_constraintTop_toBottomOf="@+id/endDateButton" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>