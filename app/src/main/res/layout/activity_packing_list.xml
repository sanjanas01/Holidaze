<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/blue2"
tools:context=".PackingActivity">

<!-- Title -->
<TextView
    android:id="@+id/packingListTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="My Packing List"
    android:textAppearance="?attr/textAppearanceHeadline6"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<!-- Tabs -->
<RadioGroup
    android:id="@+id/tabGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    app:layout_constraintTop_toBottomOf="@id/packingListTitle"
    app:layout_constraintStart_toStartOf="parent">

    <RadioButton
        android:id="@+id/allTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALL"
        android:textColor="@color/black"
        android:button="@null"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp" />

    <RadioButton
        android:id="@+id/pendingTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PENDING"
        android:textColor="@color/black"
        android:button="@null"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp" />
</RadioGroup>

<!-- Scrollable Packing List -->
<ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintTop_toBottomOf="@id/tabGroup"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Packing List Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Essentials -->
            <TextView
                android:id="@+id/essentialsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESSENTIALS"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Proof" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver's License" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FirstAidKit" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tickets" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Razor" />
            </LinearLayout>

            <!-- Health Care -->
            <TextView
                android:id="@+id/healthCareTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEALTH CARE"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vitamins" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dolo 650" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clevidipine" />
            </LinearLayout>

            <!-- Electronics -->
            <TextView
                android:id="@+id/electronicsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ELECTRONICS"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IPad" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Charger" />
            </LinearLayout>

            <!-- Accessories -->
            <TextView
                android:id="@+id/accessoriesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCESSORIES"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiking Shoes" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Torch" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
