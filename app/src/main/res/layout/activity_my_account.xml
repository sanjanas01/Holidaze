<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccountActivity">

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/label_name"
        android:layout_alignBaseline="@id/label_name"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter your name"/>

    <TextView
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="18sp"
        android:layout_below="@id/edit_text_name"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/label_email"
        android:layout_alignBaseline="@id/label_email"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter your email"/>

    <TextView
        android:id="@+id/label_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers:"
        android:textSize="18sp"
        android:layout_below="@id/edit_text_email"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/edit_text_followers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/label_followers"
        android:layout_alignBaseline="@id/label_followers"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter number of followers"/>

    <Button
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_below="@id/edit_text_followers"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_update"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="105dp"
        android:layout_height="57dp"
        android:layout_below="@id/button_update"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/img_4" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginStart="100dp"
            app:srcCompat="@drawable/img_5" />

    </LinearLayout>

    <TextView
        android:id="@+id/label_myalbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="350dp"
        android:text="My Albums"
        android:fontFamily="serif-monospace"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="233dp"
        android:layout_height="157dp"
        android:layout_below="@id/button_update"
        android:layout_marginStart="0dp"
        android:layout_marginTop="160dp"
        app:srcCompat="@drawable/img_7" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="233dp"
        android:layout_height="180dp"
        android:layout_below="@id/button_update"
        android:layout_marginStart="220dp"
        android:layout_marginTop="160dp"
        app:srcCompat="@drawable/img_7" />


</RelativeLayout>
